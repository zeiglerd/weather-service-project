{
  "name": "weather-service-project",
  "version": "0.0.1",
  "description": "HTTP server that serves the forecasted weather",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeiglerd/weather-service-project.git"
  },
  "author": "Dustin Zeigler",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "cross-env NODE_ENV=development && tsup --watch",
    "start": "npm run openapi && cross-env NODE_ENV=production node dist/index.js",
    "openapi": "swagger-cli bundle ./src/openapi/openapi.yaml --outfile ./dist/openapi/openapi.yaml --type yaml"
  },
  "dependencies": {
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.6.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "swagger-cli": "^4.0.4",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.11.1"
  }
}
